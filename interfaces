# This file describes the network interfaces available on the system
# and how to activate them. For more information, see interfaces(5).

# Source any additional configuration files
source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# First network interface (DHCP)
auto eth0
iface eth0 inet dhcp

# Second network interface (Static IP and Subnet Mask)
auto eth1
iface eth1 inet static
    address 192.168.1.100
    netmask 255.255.255.0

# Third network interface (Static IP, Subnet Mask, Gateway, DNS, and Domain)
auto eth2
iface eth2 inet static
    address 192.168.2.100
    netmask 255.255.255.0
    gateway 192.168.2.1
    dns-nameservers 8.8.8.8 8.8.4.4
    dns-search example.com
